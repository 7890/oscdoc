    <param_f symbol="dd"/>
    <param_X symbol="ee"/>
    <param_h symbol="ff"/>
    <param_b symbol="bytestyle" min_size="22" max_size="33"/>
    <param_s symbol="symbolic" min_length="2" max_length="33"/>
