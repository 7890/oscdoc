  <message_in pattern="/a/path" typetag="">
    <desc>this is a message without any parameters.</desc>
  </message_in>

  <message_in pattern="/another/pattern" typetag="f">
    <desc>with a float value</desc>
    <param_f symbol="my_symbol" units="bananas">
      <range_inf_inf default="0">
        <hints>
          <point symbol="low" value="-1">Lower bound for DAC</point>
          <point symbol="zero" value="0">Zero, silence</point>
          <point symbol="high" value="1">Upper bound for DAC</point>
        </hints>
      </range_inf_inf>
    </param_f>
  </message_in>

  <message_out pattern="/print/info" typetag="i_">
    <param_i symbol="the_symbol"/>
    <param__/>
  </message_out>

  <message_out pattern="/test/target" typetag="XfiifXhbs">
